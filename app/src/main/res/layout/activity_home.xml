<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/weatherRelatedHindrances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:text="Weather Related Hindrances"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />

    <Button
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weatherRelatedHindrances"
        android:layout_centerHorizontal="true"
        android:text="Track Extension Request" />

    <Button
        android:id="@+id/viewSavedData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track"
        android:layout_centerHorizontal="true"
        android:text="View Saved Data" />
</RelativeLayout>