<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thecombatant.morth">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/morth"
        android:label="@string/app_name"
        android:roundIcon="@drawable/morth"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ExtensionDays"></activity>
        <activity android:name=".SavedHindrancesListActivity" />
        <activity android:name=".OtherUploadActivity" />
        <activity
            android:name=".WeatherHindranceActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".EnterTenderDetailsActivity"
            android:parentActivityName=".EnterTenderIDActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".EnterTenderIDActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>